<% if current_user.auctions.empty? %>
	<p>No currently scheduled auctions</p>
	<a href="/auctions/new" class="btn btn-primary">Create Auction</a>
<% else %>
    <div class="container mt-4">
        <h1 class="display-4 create-auction--header text-light">Your upcoming auctions.</h1>
        <div class="row">
    	<% current_user.auctions.each do |auction| %>
    		<div class="col-12 col-8 col-md-6 col-lg-4 ml-auto mr-auto">
                <div class="card mb-4" style="">
                    <div class="card-header bg-info text-light">
                        <h4 class="card-title text-center"><%= auction.title %></h4>
                    </div>
                    <img class="card-img-top" src="../img/random_pic-350x150.jpeg" alt="Card image cap">
                    <div class="card-body">
                       
                        <p class="card-text">
                            <%= auction.description[0..40].gsub(/\s\w+\s*$/,' and more...') %>
                        </p>
                    </div>
                    <div class="card-body text-center">
                        <% if auction.user == current_user %>
                            <a class="p-3 mb-2 btn-warning text-white rounded" href="/auctions/<%=auction.id%>/edit">edit</a>
                        <% end %>                   
                        <a class="p-3 mb-2 btn-info text-white rounded" href="/auctions/<%=auction.id%>">View All Details</a>     
                    </div>
                    <!-- End of .card-body -->
                </div>
                <!-- End of .card -->
               </div>
               <!-- End of .col -->
    	<% end %>
        <!-- End of iteration -->
    <% end %>
    <!-- End of conditional statement -->
        </div>
        <!-- End of .row -->
    </div>
    <!-- End of .containter -->

