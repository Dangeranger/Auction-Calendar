<nav class="navbar navbar-dark bg-dark navbar-landing">
  <a href="/"><h3 class="masthead-brand text-light">Auction Calendar</h3></a>
  <a class="nav-link btn btn-outline-primary" href="/login">Log In</a>
</nav>

<div class="signup-page--div h-100">
  <div class="container h-100 landing-page--info text-center"> 
  	<h3 class="display-4 signup-page--header mb-5">Start managing your auctions today.</h3>

  	<div class="container mt-4">
        <div class="row justify-content-center">
          <div class="col-11 col-sm-12 col-md-11 col-lg-6">

			<form method="post" action="/signup">
				<% if flash.has?(:message) %>
						<span class="badge-warning rounded pl-1 pr-1"><%= flash[:message] %></span> 
				<% end %>
				<div class="form-group">
					<!-- Username input -->
			  		<input type="text" name="username" class="form-control" placeholder="Username" required>
			  	</div>
			  	<div class="form-group">
			  		<!-- Email Input -->
			    	<input type="email" name="email" class="form-control" placeholder="Enter email" required>
			    	<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
				</div>
		  		<div class="form-group">    	
		    		<input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
		  		</div>
		  		
		  		<button type="submit" class="btn btn-success btn-sml">Sign Up</button>

		 	</form>
          <!-- End of form -->
        </div>
        <!-- End of .col -->
      </div>
      <!-- End of .row -->
    </div>
    <!-- End of .col class -->
  </div>
  <!-- End of .row -->
</div>
<!-- End of .container -->

