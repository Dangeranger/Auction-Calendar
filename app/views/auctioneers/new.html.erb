<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-12 col-md-11 col-lg-8">
      <h1 class="display-4 create-auction--header mb-3">Add Auctioneer</h1>
      <form method="post" action="/auctioneers">
      <!-- AUCTIONEER INPUTS -->

      	<!-- Create Auction -->
        <div class="form-group row">
        	<label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
      	    <input type="text" id="name" class="form-control" name="auctioneer[name]">
        	</div>
        </div><!-- End of/Auction Title -->

        <!-- END OF AUCTIONEER INPUTS -->

      	<!-- Checkboxes for Auctioneers -->
        <div class="form-group row">
          <div class="col-md-8">
            <div class="form-check">
            <h4>Assign Auctioneer to Sale(s)</h4>
            <% Auction.all.each do |auction| %>

              <label class="form-check-label mb-2">
                <input class="form-check-input" type="checkbox" name="auctioneer[auction_ids][]" value="<%=auction.id%>"> <%=auction.title %>
              </label>

            <% end %>

            </div>
          </div>
        </div><!-- END of/Checkboxes for Auctioneers -->
        
       <!-- Need an input for Creating Auctioneers --> 
        <div class="form-group row">
          <div class="col">
            <button type="submit" class="btn btn-success">Add Auctioneer</button>
          </div>
        </div>
        <!-- End of .form-group -->

      </form>
      <!-- End of form -->
    </div>
    <!-- End of .col class -->
