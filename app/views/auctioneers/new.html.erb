<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-12 col-md-11 col-lg-8">
      <h1 class="display-4 create-auction--header mb-3 text-light">Add Auctioneer</h1>
      <div class="container bg-light rounded pb-2 pt-4">
        <form method="post" action="/auctioneers">

        <!-- AUCTIONEER INPUTS -->

          <!-- Raises Error message if invalid submission -->
            <% if flash.has?(:message) %>
              <% flash[:message].each do |msg| %>
                <span class="text-danger">
                  <em><%= msg %></em>
                </span>
              <% end %>
              <!-- End of iteration  -->
            <% end %>
            <!-- End of Error handling -->

        	<!-- Create Auctioneer -->
          <div class="form-group row">
          	<label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
        	    <input type="text" id="name" class="form-control" name="auctioneer[name]" placeholder="Full Name" required>
          	</div>
          </div>
          <!-- End of/Auctioneer Name -->

          <!-- Auctioneer License Number -->
            <div class="form-group row">
              <label for="au_number" class="col-sm-2 col-form-label">AU #</label>
              <div class="col-sm-10">
                <input type="text" id="au_number" class="form-control" name="auctioneer[auctioneer_license]" placeholder="AU1000" required>
              </div>
          </div>
          <!-- End of/Auction License Number -->

            <!-- Auctioneer Bio -->
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="bio">Bio</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="description" name="auctioneer[bio]" rows="3" placeholder="Short Bio..."></textarea>
                </div>
            </div> 
            <!-- End of/Auctioneer bio -->


          <!-- END OF AUCTIONEER INPUTS -->

        	<!-- Checkboxes for Auctioneers -->
          <div class="form-group row">
            <div class="col-md-8">
              <div class="form-check">
              <h4>Assign Auctioneer to Sale(s)</h4>
              <% Auction.all.each do |auction| %>

                <label class="form-check-label mb-2">
                  <input class="form-check-input" type="checkbox" name="auctioneer[auction_ids][]" value="<%=auction.id%>"> <%=auction.title %></input>
                </label>

              <% end %>

              </div>
            </div>
          </div><!-- END of/Checkboxes for Auctioneers -->
          
         <!-- Need an input for Creating Auctioneers --> 
          <div class="form-group row">
            <div class="col">
              <button type="submit" class="btn btn-success">Add Auctioneer</button>
            </div>
          </div>
          <!-- End of .form-group -->
        </div>
        <!-- End of .container adds white space and container to form element -->
      </form>
      <!-- End of form -->
    </div>
    <!-- End of .col class -->
  </div>
  <!-- End of .row -->
</div>
<!-- End of .container -->
