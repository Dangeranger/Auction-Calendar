<% if Auction.all.empty? %>
    <p>No Auctions to List</p>

    <% else %>
    <div class="container">
    <div class="row">
        <% Auction.all.each do |auction| %>
    	<div class="col-md-6">
            <div class="card mb-4" style="">
                <img class="card-img-top" src="http://via.placeholder.com/350x150" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title text-center"><%= auction.title %></h4>
                    <p class="card-text">
                        <%= auction.description[0..40].gsub(/\s\w+\s*$/,',and more...') %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Location:</strong>
                        <%= auction.location%>
                    </li>
                    <li class="list-group-item"><strong>Auction On:</strong>
                        <%= auction.start_date %>
                    </li>                    
                </ul>
                <div class="card-body text-center">
                    <a href="/auctions/<%=auction.id%>" class="card-link">View All Details</a>
                </div>
                <!-- End of .card-body -->
            </div>
            <!-- End of .card -->
           </div>
           <!-- End of .col -->
