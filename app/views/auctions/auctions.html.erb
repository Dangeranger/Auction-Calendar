<h1> Hi, <%= current_user.username %></h1> 
<a class="btn btn-primary btn-sml" href="/users/<%=current_user.slug%>">View Your Sales</a>
<a href="/auctions/new" class="btn btn-success btn-sml">Create Auctions</a>
<a href="/auctioneers/new" class="btn btn-success btn-sml">Add Auctioneer</a>
<a class="btn btn-warning" href="/logout">Log Out</a>

<% if Auction.all.empty? %>
	<p>No Auctions to List</p>
	
<% else %>
	<% Auction.all.each do |auction| %>
	<div>
		<h2><%= auction.title %></h2>
		<div>
			<h3>Auction Description</h3>
			<p><%= auction.description %></p>
		<div>
		<div>
			<h3>Live On-Site Auction</h3>
			<p>Location: <%=auction.location%></p>
			<p>Begins at: <%= auction.start_date %> <%= auction.start_time%></p>
		</div>
		<div>
			<h3>Live On-site Preview</h3>
			<p><%= auction.preview_date %> <%=auction.preview_time%></p>
		</div>
		<div>
			<h3>Auctioneers</h3>
			<ul>
				<% auction.auctioneers.each do |auctioneer| %>
					<li><%= auctioneer.name %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>
<% end %>